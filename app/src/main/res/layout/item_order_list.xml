<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/ll_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_666666"
            android:textSize="12sp"
            android:text="平台用户："/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_999999"
            android:textSize="12sp"
            android:text="xxxxxx"
            android:layout_gravity="right"/>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_pay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已付款"
            android:textColor="@color/pink_f25b4e"
            android:textSize="13sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥000.00"
            android:textColor="@color/red_e93a38"
            android:textSize="18sp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计:"
            android:textColor="@color/black_333333"
            android:textSize="13sp"
            android:layout_toLeftOf="@id/tv_total_money"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View style="@style/divider_horizontal"
        android:background="@color/gray_e6e6e6"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="14dp">
        
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_333333"
            android:textSize="13sp"
            android:text="需配送"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_e93a38"
            android:textSize="13sp"
            android:text="发货"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_gravity="right"
            android:background="@drawable/bg_white_redbox"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"/>
        
    </FrameLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_F6F7F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_fa4b45"
        android:orientation="vertical">

        <include layout="@layout/layout_tab_dark_action_bar" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/ic_down"
                android:layout_gravity="center"
                android:text="@string/member_status"
                android:textColor="@color/black_666666"
                android:textSize="13sp" />
        </FrameLayout>
        <View
            style="@style/divider_vertical"
            android:layout_height="12dp"
            android:background="@color/gray_f1f2f4"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="2dp"
                android:drawableLeft="@mipmap/top_ic_search"
                android:layout_gravity="center"
                android:text="@string/search"
                android:textColor="@color/black_666666"
                android:textSize="13sp" />
        </FrameLayout>

    </LinearLayout>
    
</LinearLayout>
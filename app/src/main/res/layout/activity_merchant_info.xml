<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/gray_f2f2f2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_fa4b45">

        <include layout="@layout/layout_dark_action_bar" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="21dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_f2f5fa"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="基础信息" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:divider="@drawable/divider_gray_1dp"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:showDividers="middle">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商户名"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="商户名"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系人"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_master"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="联系人"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/fl_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="手机"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15"
                            android:drawableRight="@mipmap/me_ic_next_black"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="代理"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="代理"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="人员"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_member"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="人员"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="营业执照"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_license_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="营业执照"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="21dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_f2f5fa"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="结算信息" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:divider="@drawable/divider_gray_1dp"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:showDividers="middle">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="扫码支付费率"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_offline_commission_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="扫码支付费率"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="线上交易费率"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_platform_commission_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="线上交易费率"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="结算联系人"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_account_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="结算联系人"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开户行"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="开户行"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开户"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_bank_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="开户"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingTop="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="账号"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                        <TextView
                            android:id="@+id/tv_merchant_bank_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            tool:text="账号"
                            android:textColor="@color/black_333333"
                            android:textSize="@dimen/sp_15" />

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
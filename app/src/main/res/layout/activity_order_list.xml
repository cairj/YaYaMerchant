<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_F6F7F9"
    android:orientation="vertical">

    <include layout="@layout/layout_light_action_bar" />

    <LinearLayout
        android:id="@+id/ll_choice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="今日"
            android:textColor="@color/text_selector_black_gray" />

        <View
            style="@style/divider_vertical"
            android:layout_height="12dp"
            android:background="@color/gray_f1f2f4" />

        <TextView
            android:id="@+id/tv_yesterday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="昨日"
            android:textColor="@color/text_selector_black_gray" />

        <View
            style="@style/divider_vertical"
            android:layout_height="12dp"
            android:background="@color/gray_f1f2f4" />

        <TextView
            android:id="@+id/tv_this_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="本月"
            android:textColor="@color/text_selector_black_gray" />

        <View
            style="@style/divider_vertical"
            android:layout_height="12dp"
            android:background="@color/gray_f1f2f4" />

        <TextView
            android:id="@+id/tv_custom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="自定义"
            android:textColor="@color/text_selector_black_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_choose_date"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="29dp"
        android:paddingRight="29dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pink_feeeed"
            android:padding="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/sp_14"/>

        </LinearLayout>

    </LinearLayout>
    
    <include
        layout="@layout/layout_base_ptr_recycle"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
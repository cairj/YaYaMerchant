<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/ptr_frame"
        style="@style/BasePtrFrameLayout">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="243dp"
                    android:background="@mipmap/top_bg">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">

                        <TextView
                            android:id="@+id/home_tv_title"
                            style="@style/text_title"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/home_title"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="8dp">

                            <ImageView
                                android:id="@+id/iv_news"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:src="@mipmap/home_ic_news" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:background="@drawable/bg_red_circle"
                                android:paddingBottom="1dp"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp"
                                android:paddingTop="1dp"
                                android:text="2"
                                android:textColor="@color/white_fefefe"
                                android:textSize="9sp"
                                android:visibility="gone" />
                        </FrameLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/home_tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="43sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/home_tv_amount"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="@string/today_amount"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-45dp"
                    android:background="@drawable/ic_shadow"
                    android:paddingBottom="32dp"
                    android:paddingTop="32dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_today_transaction_number"
                            style="@style/home_today_data_number"
                            android:text="" />

                        <TextView
                            style="@style/home_today_data_title"
                            android:lines="1"
                            android:text="@string/today_transaction_number" />

                    </LinearLayout>

                    <View
                        style="@style/divider_vertical"
                        android:layout_marginTop="4dp"
                        android:background="@color/pink_FFD6E0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_today_visitor_number"
                            style="@style/home_today_data_number"
                            android:text="" />

                        <TextView
                            style="@style/home_today_data_title"
                            android:lines="1"
                            android:text="@string/today_visitor_number" />

                    </LinearLayout>

                    <View
                        style="@style/divider_vertical"
                        android:layout_marginTop="4dp"
                        android:background="@color/pink_FFD6E0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_today_new_member_number"
                            style="@style/home_today_data_number"
                            android:text="" />

                        <TextView
                            style="@style/home_today_data_title"
                            android:lines="1"
                            android:text="@string/today_new_member_number" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/ic_shadow"
                    android:orientation="vertical"
                    android:paddingBottom="25dp"
                    android:paddingTop="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_receivables"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_receivables"
                            android:text="@string/receivables" />

                        <TextView
                            android:id="@+id/tv_scan_payment"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_scan_payment"
                            android:text="@string/scan_payment" />

                        <TextView
                            android:id="@+id/tv_online_payment"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_online_payment"
                            android:text="@string/online_payment" />

                        <TextView
                            android:id="@+id/tv_with_draw_money"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_withdraw_money"
                            android:text="@string/recharge" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_cash"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_cash"
                            android:text="@string/cash" />

                        <TextView
                            android:id="@+id/tv_balance_account"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_money"
                            android:text="@string/balance_account" />

                        <TextView
                            android:id="@+id/tv_report"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_report"
                            android:text="@string/report" />

                        <TextView
                            android:id="@+id/tv_vip"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_vip"
                            android:text="@string/vip" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_method_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_return_review"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_return_review"
                            android:text="退货审核" />

                        <TextView
                            android:id="@+id/tv_receive"
                            style="@style/home_btn_tv"
                            android:drawableTop="@mipmap/home_ic_car"
                            android:text="发货" />

                        <TextView
                            style="@style/home_btn_tv"
                            android:layout_weight="2" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_member"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/ic_shadow"
                    android:orientation="vertical"
                    android:paddingBottom="28dp"
                    android:paddingTop="14dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="@string/member_data"
                        android:textColor="@color/black_454555"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <LinearLayout
                            android:id="@+id/fl_total_order_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_order_number"
                                style="@style/home_today_data_number"
                                android:text="" />

                            <TextView
                                style="@style/home_today_data_title"
                                android:layout_marginTop="5dp"
                                android:text="@string/total_order_number" />

                        </LinearLayout>

                        <View
                            style="@style/divider_vertical"
                            android:layout_marginTop="4dp"
                            android:background="@color/gray_DADDE6" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_transaction_number"
                                style="@style/home_today_data_number"
                                android:text="" />

                            <TextView
                                style="@style/home_today_data_title"
                                android:layout_marginTop="5dp"
                                android:text="@string/total_transaction_number" />

                        </LinearLayout>

                        <View
                            style="@style/divider_vertical"
                            android:layout_marginTop="4dp"
                            android:background="@color/gray_DADDE6" />

                        <LinearLayout
                            android:id="@+id/fl_total_member"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_member_number"
                                style="@style/home_today_data_number"
                                android:text="" />

                            <TextView
                                style="@style/home_today_data_title"
                                android:layout_marginTop="5dp"
                                android:text="@string/total_member_number" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:background="@drawable/ic_shadow"
                    android:orientation="vertical"
                    android:paddingBottom="28dp"
                    android:paddingTop="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/gray_999999"
                            android:text="昨日\n销量"
                            android:gravity="center"/>

                        <View
                            style="@style/divider_vertical"
                            android:layout_marginTop="4dp"
                            android:background="@color/gray_DADDE6" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/home_today_data_title"
                                android:layout_marginTop="5dp"
                                android:text="@string/total_order_number" />

                            <TextView
                                android:id="@+id/tv_yesterday_order_count"
                                style="@style/home_today_data_number"
                                android:text="" />
                        </LinearLayout>

                        <View
                            style="@style/divider_vertical"
                            android:layout_marginTop="4dp"
                            android:background="@color/gray_DADDE6" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/home_today_data_title"
                                android:layout_marginTop="5dp"
                                android:text="总销售额" />

                            <TextView
                                android:id="@+id/tv_yesterday_order_amount"
                                style="@style/home_today_data_number"
                                android:text="" />

                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/divider_horizontal"
                        android:background="@color/gray_DADDE6"
                        android:layout_marginTop="@dimen/dp_14"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/gray_999999"
                            android:text="本月\n销量"
                            android:gravity="center"/>

                        <View
                            style="@style/divider_vertical"
                            android:layout_marginTop="4dp"
                            android:background="@color/gray_DADDE6" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/home_today_data_title"
                                android:layout_marginTop="5dp"
                                android:text="@string/total_order_number" />

                            <TextView
                                android:id="@+id/tv_this_month_order_count"
                                style="@style/home_today_data_number"
                                android:text="" />
                        </LinearLayout>

                        <View
                            style="@style/divider_vertical"
                            android:layout_marginTop="4dp"
                            android:background="@color/gray_DADDE6" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/home_today_data_title"
                                android:layout_marginTop="5dp"
                                android:text="总销售额" />

                            <TextView
                                android:id="@+id/tv_this_month_order_amount"
                                style="@style/home_today_data_number"
                                android:text="" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_14"
                    android:gravity="right"
                    android:text="近30日销售排名"
                    android:background="@color/white"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_goods_sale_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </in.srain.cube.views.ptr.PtrFrameLayout>

</LinearLayout>
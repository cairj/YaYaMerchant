<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink_fa4b45">

        <include layout="@layout/layout_dark_action_bar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/tv_submit_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_gray_7f7f7f_rounded"
            android:text="不通过" />

        <TextView
            android:id="@+id/tv_submit"
            style="@style/tv_submit_btn"
            android:layout_width="0dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1" />

    </LinearLayout>

    <com.yaya.merchant.widgets.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/pink_fa4b45"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_buyer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/ic_address"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="5dp"
                android:paddingBottom="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="15dp"
                android:textColor="@color/black_333333" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台用户："
                    android:textColor="@color/black_666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="xxxxxx"
                    android:textColor="@color/gray_999999"
                    android:textSize="12sp" />

            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_order_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品总额"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_deliver_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实付款"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textColor="@color/red_e93a38"
                        android:textSize="18sp" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_pay_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_delivery_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="9dp"
                    android:text="客户意见"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_1dp"
                    android:background="@color/gray_f2f2f2"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_service_opinion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="9dp"
                    android:text="客户意见"/>

                <TextView
                    android:id="@+id/tv_service_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="9dp"
                    android:text="备注"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_treasure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="9dp"
                    android:text="财务审核"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_1dp"
                    android:background="@color/gray_f2f2f2"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_treasure_opinion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="9dp"
                    android:text="财务意见"/>

                <TextView
                    android:id="@+id/tv_treasure_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="9dp"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_treasure_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginTop="9dp"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>
    </com.yaya.merchant.widgets.ObservableScrollView>

</RelativeLayout>
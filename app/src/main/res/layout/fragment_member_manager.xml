<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_F6F7F9"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_screen"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/fl_member_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/ic_down"
                android:text="@string/member_status"
                android:textColor="@color/black_666666"
                android:textSize="13sp" />
        </FrameLayout>

        <View
            style="@style/divider_vertical"
            android:layout_height="12dp"
            android:background="@color/gray_f1f2f4" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="2dp"
                android:drawableRight="@mipmap/ic_down"
                android:text="@string/member_status"
                android:textColor="@color/black_666666"
                android:textSize="13sp" />
        </FrameLayout>

        <View
            style="@style/divider_vertical"
            android:layout_height="12dp"
            android:background="@color/gray_f1f2f4"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/fl_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@mipmap/top_ic_search"
                android:drawablePadding="2dp"
                android:text="@string/search"
                android:textColor="@color/black_666666"
                android:textSize="13sp" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_status"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:paddingLeft="14dp"
        android:paddingRight="36dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/name_phone"
            android:textColor="@color/gray_999999"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="@string/balance"
            android:textColor="@color/gray_999999"
            android:textSize="13sp" />
    </FrameLayout>

    <include layout="@layout/layout_base_ptr_recycle" />
</LinearLayout>